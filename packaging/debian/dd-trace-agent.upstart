description "dd-trace-agent"

# Defaults set by kernel
limit nofile 1024 4096

start on runlevel[2345]
stop on runlevel[016]

respawn limit 10 5

setuid dd-agent
expect daemon

exec start-stop-daemon --start --quiet --oknodo --background --make-pidfile --pidfile /opt/datadog-agent/run/dd-trace-agent.pid --chuid dd-agent --startas /bin/bash -- -c "exec /opt/datadog-agent/bin/trace-agent >> /var/log/datadog/trace-agent.log 2>&1"
